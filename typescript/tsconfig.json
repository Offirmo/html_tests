{
	"compilerOptions": {
		"listFiles": true,
		"pretty": true,

		"allowJs": false,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"target": "es6",
		"noEmit": true,
		"noEmitOnError": true
	},
	"compileOnSave": false,
	"_comments": {
		"module": "commonjs",
		"moduleResolution": "node"
	}
}
